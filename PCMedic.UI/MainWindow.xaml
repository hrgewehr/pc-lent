<Window x:Class="PCMedic.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PCMedic" Height="520" Width="820">
  <DockPanel Margin="10">
    <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,10">
      <Button Width="120" Margin="0,0,10,0" Click="Refresh_Click">Scan now</Button>
      <Button Width="150" Margin="0,0,10,0" Click="Fix_Sfc">Run SFC</Button>
      <Button Width="170" Margin="0,0,10,0" Click="Fix_Dism">Run DISM</Button>
      <Button Width="170" Click="Fix_Defrag">Defrag HDD</Button>
    </StackPanel>
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="*"/>
      </Grid.RowDefinitions>
      <TextBlock x:Name="StatusText" FontSize="14" Margin="0,0,0,8"/>
      <DataGrid x:Name="FindingsGrid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True">
        <DataGrid.Columns>
          <DataGridTextColumn Header="Severity" Binding="{Binding Severity}" Width="100"/>
          <DataGridTextColumn Header="Message" Binding="{Binding Message}" Width="*"/>
          <DataGridTextColumn Header="Fix" Binding="{Binding SuggestedFix}" Width="200"/>
        </DataGrid.Columns>
      </DataGrid>
    </Grid>
  </DockPanel>
</Window>
